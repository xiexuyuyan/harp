<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<manifest package="com.yuyan.harp">
    <application name="com.yuyan.harp.application.MainApplication"/>

    <controller name="com.yuyan.harp.user.UserController">
        <!-- login by @name and @mail -->
        <action url="login.jsp" name="login">
            <parameter name="name" type="string"/>
            <parameter name="mail" type="string"/>
        </action>
        <!-- login by @uid -->
        <action url="login.jsp" name="login">
            <parameter name="uid" type="int"/>
        </action>
    </controller>

</manifest>